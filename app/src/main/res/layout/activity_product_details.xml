<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivProductDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_product_details_height"
        android:layout_marginRight="@dimen/product_details_margin"
        android:layout_marginLeft="@dimen/product_details_margin"
        android:layout_marginTop="@dimen/product_details_margin"
        android:src="@drawable/suede_blue_shoes" />

    <LinearLayout
        android:layout_marginRight="@dimen/product_details_margin"
        android:layout_marginLeft="@dimen/product_details_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_product_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/product_details_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_product_name"
            android:textStyle="bold"
            tools:text="Suede Shoes Blue" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_old_price_details"
        android:layout_marginLeft="@dimen/product_details_margin"
        android:layout_marginRight="@dimen/product_details_margin"
        android:layout_marginBottom="@dimen/product_details_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_old_price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_product_detail_old_price"
            tools:text="£ 17.89" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/product_details_margin"
        android:layout_marginRight="@dimen/product_details_margin"
        android:layout_marginBottom="@dimen/product_details_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_new_price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_product_name"
            android:textStyle="bold"
            tools:text="£ 17.89" />

    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="@dimen/product_details_margin"
        android:layout_marginRight="@dimen/product_details_margin"
        android:layout_marginBottom="@dimen/product_details_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_category_label_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_product_details_common"
            android:textStyle="bold"
            tools:text="Category" />

        <TextView
            android:id="@+id/tv_category_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_product_details_common"
            tools:text="Women's Footwear" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/product_details_margin"
        android:layout_marginRight="@dimen/product_details_margin"
        android:layout_marginBottom="@dimen/product_details_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_stock_label_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_product_details_common"
            android:textStyle="bold"
            tools:text="Quantity" />

        <TextView
            android:id="@+id/tv_stock_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_product_details_common"
            tools:text="5" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_add_cart_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/product_details_margin"
        android:drawableLeft="@drawable/ic_cart_white"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colortTextOnGreen"
        android:text="@string/btn_add_cart" />

    <Button
        android:id="@+id/btn_favourite_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/product_details_margin"
        android:layout_marginRight="@dimen/product_details_margin"
        android:layout_marginBottom="@dimen/product_details_margin"
        android:drawableLeft="@drawable/ic_heart"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/colorFavouriteRed"
        android:text="@string/btn_add_fav" />


</LinearLayout>